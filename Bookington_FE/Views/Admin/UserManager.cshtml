    </div>
</div>



@if (Model.pagination.totalCount > 0)
{
    <script type="text/javascript">
        window.onload = function () {
            SetPageNumAndSizeU(@Model.pagination.currentPage, @Model.pagination.maxPageSize);
        };
    </script>
    
}
